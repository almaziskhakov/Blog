<p id="notice"><%= notice %></p>
<h3>Post</h3>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<hr>
<h5>Comments:</h5>
<hr>
<div class="comments">
    <% @post.comments.each do |comment| %>
        <%= render comment %>
    <% end %>
</div>

<%= form_for [@post, @post.comments.build], remote: true do |f| %>
    <p><%= f.text_area :text %></p>
    <p><%= f.submit 'Send' %></p>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
